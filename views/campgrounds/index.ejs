<%- include("../partials/header"); %>


<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h2>Welcome to Sneaker-eview!</h2>
            <p>On our way to become world's largest sneaker community </p>
            <p>
                <a href="/campgrounds/new" class="btn btn-primary btn-large">Add New Sneaker</a>
            </p>
        </div>
    </header>

    <div class="row text-center"  style="display: flex; flex-wrap: wrap;">
        <% for(var i = 0; i < campgrounds.length; i++){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src="<%= campgrounds[i].image %>" >
                    <div class="caption">
                        <h4><%= campgrounds[i].name %></h4>
                    </div>
                    <p>
                        <a href="/campgrounds/<%= campgrounds[i]._id %>" class="btn btn-primary">More Info</a>
                    </p>
                </div>
            </div>
        <% }; %>
    </div>
